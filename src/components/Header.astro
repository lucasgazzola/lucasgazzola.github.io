---
import HamburgerMenuButton from './HamburgerMenuButton.astro'
import DropdownMenu from './DropdownMenu.astro'
import LinksList from './LinksList.astro'
const logo = '<LJ />'
---

<header class="header">
  <div class="header-content">
    <a class="menu-item" href="#"><span>{logo}</span></a>
    <HamburgerMenuButton />
    <LinksList />
  </div>
  <DropdownMenu />
</header>

<style>
  span {
    font-weight: 400;
    font-size: 1.2rem;
  }
  a {
    color: rgb(11, 194, 139);
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
    color: rgb(11, 194, 139);
  }
  header {
    position: fixed;
    top: 0;
    width: 100%;
    height: var(--nav-bar-height);
    background-color: var(--nav-bar-color);
    color: #ddd;
    padding: 0 2rem;
  }

  .header-content {
    position: relative;
    display: flex;
    width: 100%;
    height: 100%;
    background-color: inherit;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
  }
</style>

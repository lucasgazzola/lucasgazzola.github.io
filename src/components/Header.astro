---
import HamburgerMenuButton from './HamburgerMenuButton.astro'
import DropdownMenu from './DropdownMenu.astro'
import LinksList from './LinksList.astro'
const logo = '<LJ />'
---

<header class="header">
  <div class="header-content">
    <a class="menu-item" href="/#"><span>{logo}</span></a>
    <HamburgerMenuButton />
    <LinksList />
  </div>
  <DropdownMenu />
</header>

<style>
  span {
    font-weight: 600;
    font-size: 1.2rem;
  }
  a {
    color: var(--primary-color);
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }

  header {
    position: fixed;
    top: 0;
    width: 100%;
    height: var(--nav-bar-height);
    background-color: var(--nav-bar-color);
    padding: 0 2rem;
    z-index: 50;
  }

  .header-content {
    position: relative;
    display: flex;
    width: 100%;
    height: 100%;
    background-color: inherit;
    justify-content: space-evenly;
    align-items: center;
    z-index: 100;
  }
  @media (max-width: 1440px) {
    .header-content {
      justify-content: space-between;
    }
  }
</style>

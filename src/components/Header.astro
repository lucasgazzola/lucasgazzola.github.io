---
import HamburgerMenuButton from './HamburgerMenuButton.astro'
import DropdownMenu from './DropdownMenu.astro'
const logo = '</>'
---

<header class="header">
  <div class="header-content">
    <a href="/">{logo}</a>
    <HamburgerMenuButton />
  </div>
  <DropdownMenu />
</header>

<style>
  a {
    color: rgb(11, 194, 139);
    text-decoration: none;
  }
  header {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100px;
    background-color: #050505;
    color: #ddd;
    padding: 0 2rem;
  }

  .header-content {
    position: relative;
    display: flex;
    width: 100%;
    height: 100%;
    background-color: inherit;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
  }
</style>

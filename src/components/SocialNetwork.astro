---
const { network, info, href } = Astro.props
---

<li class="list-item">
  <a
    class="network-container"
    title={`${network}`}
    href={href}
    target="_blank"
    referrerpolicy="no-referrer"
    rel="noopener noreferrer nofollow">
    <img
      class="logo"
      src={`sociallogos/${network.toLowerCase()}.svg`}
      alt={network}
      title={network}
    />
    <span>{info}</span>
  </a>
</li>

<style>
  .logo {
    max-height: 30px;
    max-width: 30px;
    display: inline-block;
    height: 30px;
    width: 30px;
  }

  .network-container {
    color: #ddd;
    text-decoration: none;
    display: flex;
    justify-content: left;
    align-items: center;
    gap: 0.5rem;
  }
  .network-container:hover > span {
    text-decoration: underline;
  }
  .list-item {
    width: max-content;
  }
</style>

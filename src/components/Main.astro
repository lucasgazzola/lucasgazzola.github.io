<style>
  section#home {
    margin-top: var(--nav-bar-height);
    align-items: center;
    justify-content: center;
    width: 100%;
    height: calc(90vh - var(--nav-bar-height));
    gap: 2rem;
    position: relative;
    display: flex;
    flex-direction: row;
    background: linear-gradient(30deg, #0f161d, #1a242b, #131b22);
  }

  main {
    display: flex;
    gap: 2rem;
    flex-direction: column;
    height: 100%;
    justify-content: center;
  }
  .links-container {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .image-container {
    width: min-content;
    border-radius: 5px;
    contain: content;
    aspect-ratio: 1 / 1;
    min-width: 200px;
    min-height: 200px;
    font-size: 60px;
    background-color: #09f8;

    display: flex;
    /* justify-self: flex-end; */
    align-items: center;
  }
  .hi-emoji {
    display: inline-block;
    animation: wave-hand 0.5s linear alternate-reverse;
    animation-iteration-count: 5;
  }

  .download-link {
    display: flex;
    position: relative;
    text-align: center;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 0.7rem;
    font-size: 18px;
    font-weight: 800;
    color: #f2aa4c;
    border-radius: 2px;
    cursor: pointer;
  }

  .download-link:active {
    color: var(--button-active-color);
    transform: scale(0.99);
  }

  .title-container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    width: 100%;
  }
  .name-container {
    position: relative;
    font-size: var(--h1-size);
    color: #3bf;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }


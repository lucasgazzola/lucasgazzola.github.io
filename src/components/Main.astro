  @media (max-width: 360px) {
    .title-container {
      align-items: center;
    }
    h1 {
      text-align: center;
    }
    main {
      flex-direction: column;
    }
  }
  @media (max-width: 620px) {
    section#home {
      flex-direction: column;
    }
  }
  @media (hover: hover) {
    .download-link:hover {
      color: var(--secondary-color);
    }

    a:hover {
      text-decoration: underline;
    }

    .name-container:hover {
      cursor: crosshair;
      animation: rainbow 2s normal 1s infinite;
    }
  }
  @keyframes rainbow {
    0% {
      color: #3bf;
    }
    33% {
      color: var(--secondary-color);
    }
    66% {
      color: var(--third-color);
    }
    99% {
      color: #3bf;
    }
  }
  @keyframes wave-hand {
    0% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(10deg);
    }
    100% {
      transform: rotate(20deg);
    }
  }
</style>

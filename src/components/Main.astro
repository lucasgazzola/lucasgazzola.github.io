  main {
    display: flex;
    justify-content: center;
  }
  .hi-emoji {
    display: inline-block;
    animation: wave-hand 0.5s linear alternate-reverse;
    animation-iteration-count: 5;
  }

  .download-link {
    display: flex;
    position: relative;
    text-align: center;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 0.7rem;
    font-size: 18px;
    font-weight: 800;
    color: #f2aa4c;
    border-radius: 2px;
    cursor: pointer;
  }

  .download-link:active {
    color: var(--button-active-color);
    transform: scale(0.99);
  }

  .title-container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    width: 100%;
  }
  .name-container {
    position: relative;
    font-size: var(--h1-size);
    color: var(--primary-color);
  }


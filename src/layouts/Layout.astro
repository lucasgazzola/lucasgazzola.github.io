---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <meta
      name="description"
      content="Hi! I'm Lucas Gazzola, a FullStack Developer. This is my personal Portfolio Web made with Astro."
    />
    <link rel="preload" as="image" href="/logo-modified.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <div id="tsparticles"></div>
    <script>
      import '../tsparticles/tsparticles.ts'
    </script>
    <style is:global>
      @import '../styles/gobal-variables.css';
      #tsparticles {
        position: absolute;
      }

      html {
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        font-family: sans-serif;
        font-size: var(--main-font-size);
        background-color: var(--background-color);
        scroll-behavior: smooth;
        scroll-padding-top: var(--nav-bar-height);

        /* Transition when the background-color changes */
        transition: background-color 0.2s ease-in;
      }

      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        color: var(--text-color);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        gap: 36px;
      }
      a,
      button {
        /* IN MOBILE VERSION, this prevents the anchor 
        to be selected after being clicked by the user */
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      }
      ul {
        list-style-type: none;
      }
      section {
        padding: 36px 0;
        gap: 72px;
        width: 100%;
        display: flex;
        flex-direction: column;
      }
    </style>
    <script>
      import '../scripts/scrollReveal'
    </script>
  </body>
</html>
